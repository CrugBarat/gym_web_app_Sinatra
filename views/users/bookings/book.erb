<div class="home-container">
  <img class="home" alt="">
  <div class="bottom-left">Members.</div>
</div>
<section>
  <div class="grid">
    <div class="grid-row grid-row-sm">
      <div class="cell_container">
        <a href="/users">
          <div class="cell1"><img class="img1" src="/images/flex6.webp" alt="">
            <div class="bottom-right">MAIN MENU</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/users/instructors">
          <div class="cell3"><img class="img1" src="/images/flex1.webp" alt="">
            <div class="bottom-right">INSTRUCTORS</div>
          </div>
        </a>
      </div>
    </div>
  </section>
  <section>
    <div class="box">
      <form action="/users/bookings" method="post">
        <label for="first_name">First Name</label>
        <input type="text" name="first_name" required>
        <label for="last_name">Last Name</label>
        <input type="text" name="last_name" required>
        <label for="sessions">Session</label>
        <select id="sessions" name="session_id">
          <% for session in @sessions %>
          <% if session.over_capacity?() == false %>
          <option value="<%= session.id() %>">
            <%=  session.title() %>
          </option>
          <%end %>
          <% end %>
        </select>
        <button type="submit" name="button">BOOK</button>
      </form>
    </div>
  </section>
  <section>
    <div class="quote">
      <p>“If you don’t find the time,</p>
    </div>
    <div class="quote-middle">
      <p>&nbsp; if you don’t do the work,</p>
    </div>
    <div class="quote">
      <p>&nbsp; you don’t get the results.”</p>
    </div>
    <p class="quote-name"> – Arnold Schwarzenegger</p>
  </section>
  <section>
    <div class="grid-vid">
      <video class="video-insert" autoplay loop>
        <source src="/videos/vid5.mp4" type="video/mp4">
        </video>
      </div>
    </section>
