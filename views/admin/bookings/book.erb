<form action="/admin/bookings" method="post">
  <label for="member">Member:</label>
  <select id="member" name="member_id">
    <% for member in @members %>
    <option value="<%= member.id() %>">
      <%=  member.full_name() %>
    </option>
    <% end %>
  </select>
  <label for="sessions">Session:</label>
  <select id="sessions" name="class_id">
    <% for sessions in @sessions %>
    <option value="<%= sessions.id() %>">
      <%=  sessions.title() %>
    </option>
    <% end %>
  </select>
  <button type="submit" name="button">BOOK</button>
</form>
