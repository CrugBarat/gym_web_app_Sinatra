<div class="home-container">
  <img class="home" alt="">
  <div class="bottom-left">Admin.</div>
</div>
<section>
  <div class="grid">
    <div class="grid-row grid-row-sm">
      <div class="cell_container">
        <a href="/admin">
          <div class="cell1"><img class="img1" src="/images/flex5.webp" alt="">
            <div class="bottom-right">MAIN MENU</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/sessions">
          <div class="cell2"><img class="img1" src="/images/flex6.webp" alt="">
            <div class="bottom-right">SESSIONS</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/sessions/create">
          <div class="cell3"><img class="img1" src="/images/flex1.webp" alt="">
            <div class="bottom-right">CREATE</div>
          </div>
        </a>
      </div>
    </div>
  </section>
  <section>
    <div class="index">
      <br>
      <p style="font-weight:bold;"><%=@session.title()%></p>
      <p style="color:#fe5ebb;">Instructor: <span style="color:#414141;"><%=@session.show_instructor_name()%></span></p>
      <p style="color:#fe5ebb;">Studio: <span style="color:#414141;"><%=@session.show_room_name()%></span></p>
      <p style="color:#fe5ebb;">Start Time: <span style="color:#414141;"><%=@session.show_start_time()%></span></p>
      <p style="color:#fe5ebb;">End Time: <span style="color:#414141;"><%=@session.show_end_time()%></span></p>
      <p style="color:#fe5ebb;">Date: <span style="color:#414141;"><%=@session.show_date()%></span></p>
      <hr>
      <p style="color:#fe5ebb;">Max Capacity: <span style="color:#414141;"><%=@session.max_capacity()%></span></p>
      <p style="color:#fe5ebb;">Bookings: <span style="color:#414141;"><%=@session.number_of_members()%></span></p>
      <p style="color:#fe5ebb;">Class ID: <span style="color:#414141;"><%=@session.id() %></span></p>
      <p style="color:#B200FF;"><%=@session.show_active()%></p>
      <a href="/admin/sessions/<%= @session.id() %>/edit">
        <button type="button" name="button">EDIT</button>
      </a>
      <a href="/admin/sessions/<%= @session.id() %>/bookings">
        <button type="button" name="button">BOOKINGS</button>
      </a>
      <a href="/admin/sessions/<%= @session.id %>/bookings/new">
        <button type="button" name="button">BOOK</button>
      </a>
      <br>
    </div>
    <br/>
    <br/>
  </section>
