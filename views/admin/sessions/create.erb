<a href="/admin/sessions/create">
  <button type="button" name="button">CREATE</button>
</a>
<div class="box">
<form action="/admin/sessions" method="post" >
  <label for="title">Title</label>
  <input id="title" type="text" name="title" required>
  <textarea id="description" name="description" rows="4" cols="80">Description...</textarea>
  <label for="instructor">Instrcutor</label>
  <select id="instructor" name="instructor_id">
    <% for instructor in @instructors %>
    <option value="<%= instructor.id() %>">
      <%=  instructor.full_name() %>
    </option>
    <% end %>
  </select>
  <label for="room">Studio</label>
  <select id="room" name="room_id">
    <% for room in @rooms %>
    <option value="<%= room.id() %>">
      <%=  room.name() %>
    </option>
    <% end %>
  </select>
  <label for="max_capacity">Max Capacity</label>
  <input id="max_capacity" type="number" name="max_capacity" required>
  <label for="active">Active?</label>
  <input id="active" type="checkbox" name="active"/>
  <button type="submit" name="button">CREATE</button>
</form>
</div>
