<a href="/admin/members/create">
  <button type="button" name="button">CREATE</button>
</a>
<div class="box">
<form action="/admin/members/<%= @member.id() %>" method="POST">
  <label for="first_name">First Name</label>
  <input id="first_name" type="text" name="first_name" required/>
  <label for="last_name">Last Name</label>
  <input id="last_name" type="text" name="last_name" required/>
  <label for="membership_type">Membership Type</label>
  <select id="membership_type" name="membership_type">
    <option value="PREMIUM">PREMIUM</option>
    <option value="STANDARD">STANDARD</option>
  </select>
  <label for="date_of_birth">D.0.B</label>
  <input id="date_of_birth" type="date" name="date_of_birth" required/>
  <label for="active">Active?</label>
  <input id="active" type="checkbox" name="active"/>
  <br/>
  <br/>
  <button type="submit" name="button">UPDATE</button>
</form>
</div>
