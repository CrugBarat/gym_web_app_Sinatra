<div class="home-container">
  <img class="home" alt="">
  <div class="bottom-left">Admin.</div>
</div>
<section>
  <div class="grid">
    <div class="grid-row grid-row-sm">
      <div class="cell_container">
        <a href="/admin">
          <div class="cell1"><img class="img1" src="/images/flex1.webp" alt="">
            <div class="bottom-right">MAIN MENU</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/instructors">
          <div class="cell2"><img class="img1" src="/images/flex3.webp" alt="">
            <div class="bottom-right">INSTRUCTORS</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/instructors/create">
          <div class="cell3"><img class="img1" src="/images/flex5.webp" alt="">
            <div class="bottom-right">CREATE</div>
          </div>
        </a>
      </div>
    </div>
  </section>
  <section>
    <div class="index-table">
      <div class="table-container">
        <div class="flex-row table-flex">
          <div class="flex-cell table-headers">Instructor</div>
          <div class="flex-cell table-headers">Instructor ID</div>
          <div class="flex-cell table-headers">Edit</div>
        </div>
        <% for instructor in @instructors %>
        <div class="flex-row table-flex">
            <div class="flex-cell table-cells"><%=instructor.full_name()%></div>
            <div class="flex-cell table-cells"><%=instructor.id()%></div>
            <div class="flex-cell table-cells">
              <a href="/admin/instructors/<%= instructor.id() %>/edit">
                <button type="button" name="button">EDIT</button>
              </a>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </section>
