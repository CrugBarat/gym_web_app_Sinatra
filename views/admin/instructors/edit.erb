<section>
  <div class="grid">
    <div class="grid-row grid-row-sm">
      <div class="cell_container">
        <a href="/admin">
          <div class="cell1"><img class="img1" src="/images/sessions.webp" alt="">
            <div class="bottom-right">MAIN MENU</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/instructors">
          <div class="cell2"><img class="img1" src="/images/sessions.webp" alt="">
            <div class="bottom-right">INSTRUCTORS</div>
          </div>
        </a>
      </div>
      <div class="cell_container">
        <a href="/admin/instructors/create">
          <div class="cell3"><img class="img1" src="/images/sessions.webp" alt="">
            <div class="bottom-right">CREATE</div>
          </div>
        </a>
      </div>
    </div>
  </section>
  <section>
    <div class="box">
      <form action="/admin/instructors/<%= @instructor.id() %>" method="POST">
        <label for="first_name">First Name</label>
        <input id="first_name" type="text" name="first_name" required/>
        <label for="last_name">Last Name</label>
        <input id="last_name" type="text" name="last_name" required/>
        <textarea id="profile" name="profile" rows="4" cols="80">Profile...</textarea>
        <label for="email_address">Email</label>
        <input id="email_address" type="text" name="email_address" required/>
        <br/>
        <br/>
        <button type="submit" name="button">UPDATE</button>
      </form>
    </div>
  </section>
